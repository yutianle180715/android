<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/myradiobutton_height"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/headerlayout"
        android:layout_width="@dimen/left_space_of_title"
        android:layout_height="match_parent"
        android:duplicateParentState="false"
        android:focusable="true"
        android:background="@drawable/mychoice_item_selector"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" >

        <ImageView
            android:id="@+id/cllogo"
            android:layout_width="54dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
			android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:duplicateParentState="true"
            android:background="@drawable/mychoice_logo_selector"
            android:paddingBottom="7dp"
            android:paddingLeft="4dp"
            android:paddingRight="9dp"
            android:paddingTop="12dp"
            android:scaleType="centerInside"
            android:visibility="visible" />

        <TextView
            android:id="@+id/clnumber"
            android:layout_width="180dp"
            android:layout_height="26dp"
            android:layout_marginLeft="74dp"
            android:layout_marginTop="3dp"
            android:duplicateParentState="true"
            android:textColor="@color/channel_list_parent_text_color"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
			android:fontFamily="sans-serif"
            android:textSize="17sp" />
        <!--  android:textColor="@color/channel_list_parent_text_color"-->

        <TextView
            android:id="@+id/cnname"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginLeft="74dp"
            android:layout_marginTop="20dp"
            android:duplicateParentState="true"
            android:textColor="@color/channel_list_parent_text_color"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:requiresFadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
			android:fontFamily="sans-serif"
            android:textSize="13sp" />
        <!--  android:textColor="@color/channel_list_parent_text_color"-->
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/mychoicebts"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <org.droidtv.mychoice.MyRadioButton
            android:id="@+id/freebt"
            android:layout_height="match_parent"
            android:layout_width="@dimen/myradiobutton_width"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/mychoice_myradiobutton_selector"
            android:drawableStart="@drawable/mychoice_myradiobutton_onoff_selector"
            />
        <org.droidtv.mychoice.MyRadioButton
            android:id="@+id/pkg1bt"
            android:layout_height="match_parent"
            android:layout_width="@dimen/myradiobutton_width"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/mychoice_myradiobutton_selector"
            android:drawableStart="@drawable/mychoice_myradiobutton_onoff_selector"
            />
        <org.droidtv.mychoice.MyRadioButton
            android:id="@+id/pkg2bt"
            android:layout_height="match_parent"
            android:layout_width="@dimen/myradiobutton_width"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/mychoice_myradiobutton_selector"
            android:drawableStart="@drawable/mychoice_myradiobutton_onoff_selector"
            />

    </LinearLayout>

</LinearLayout>
