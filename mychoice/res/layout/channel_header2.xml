<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/channels_list_main_container_width"
    android:layout_height="@dimen/channels_list_list_row01_height"
    android:duplicateParentState="true">">

		    <TextView
        android:id="@+id/channelNumber"
        style="@style/channels_list_list_main_label_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/channel_list_parent_text_left"
        android:layout_marginTop="4dp"
        android:textColor="@color/channel_list_parent_text_color"
        android:duplicateParentState="true" >
		</TextView>
		<RelativeLayout		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/channel_list_parent_text_left"
		android:duplicateParentState="true">
				<TextView
			android:id="@+id/channelName"
			style="@style/channels_list_list_sub_label_text_style"
			android:layout_width="@dimen/channels_list_list_sub_label_text_width"
			android:layout_height="@dimen/channels_list_list_sub_label_text_height"			
			android:textColor="@color/channel_list_parent_text_color" 			
			android:layout_marginTop="24dp"
			android:layout_marginRight="0dp"
			android:requiresFadingEdge="horizontal"
			android:maxLines="1"
			android:singleLine="true"
			android:ellipsize="none"
			android:fadingEdgeLength="10dp"
			android:duplicateParentState="true">
		</TextView>
		</RelativeLayout>
    <ImageView
        android:id="@+id/channelLogo"
        android:layout_width="58dp"
        android:layout_height="@dimen/channels_list_list_channel_logo_container_height"
        android:layout_marginLeft="@dimen/channel_list_logo_left"
        android:layout_marginTop="2dp"
	android:layout_marginBottom="2dp"
	android:paddingLeft="10dp"
	android:paddingRight="16dp"
	android:paddingTop="12dp"
	android:paddingBottom="8dp"
        android:duplicateParentState="true"
        android:stateListAnimator="@anim/logo_animator"
        android:scaleType="fitXY"/>






</RelativeLayout>

