<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttrs="http://schemas.android.com/apk/res/org.droidtv.mychoice">
    
   <item customAttrs:state_selected_guide="true">
    <set>
      <objectAnimator
        android:duration="0"
        android:propertyName="alpha"
        android:valueFrom="1.0"
        android:valueTo="1.0" />
    </set>
  </item>
  <item android:state_selected="true">
    <set>
      <objectAnimator
        android:duration="0"
        android:propertyName="alpha"
        android:valueFrom="1.0"
        android:valueTo="1.0" />
    </set>
  </item>
  <item android:state_selected="false">
    <set>
      <objectAnimator
        android:duration="0"
        android:propertyName="alpha"
        android:valueFrom="0.4"
        android:valueTo="0.4" />
    </set>
  </item>
 <item customAttrs:state_selected_guide="false">
    <set>
      <objectAnimator
        android:duration="0"
        android:propertyName="alpha"
        android:valueFrom="0.4"
        android:valueTo="0.4" />
    </set>
  </item>
</selector>
