<?xml version="1.0" encoding="utf-8"?>
<org.droidtv.welcome.configsettings.ui.OptionsNode
    android:id="@+id/edit_dashboard_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:tag="Welcome Configuration">
    
    <org.droidtv.welcome.configsettings.ui.OptionsNode
        android:id="@+id/configure_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="Configure" >

        <org.droidtv.welcome.configsettings.ui.ListOptionsNode
            android:id="@+id/premises_name_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            data="@array/common_list_data"
            data_id="@array/common_list_data_id"
            android:tag="Premises Name" >
        </org.droidtv.welcome.configsettings.ui.ListOptionsNode>

        <org.droidtv.welcome.configsettings.ui.ListOptionsNode
            android:id="@+id/guest_name_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            data="@array/common_list_data"
            data_id="@array/common_list_data_id"
            android:tag="Guest Name" >
        </org.droidtv.welcome.configsettings.ui.ListOptionsNode>

        <org.droidtv.welcome.configsettings.ui.ListOptionsNode
            android:id="@+id/welcome_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            data="@array/common_list_data"
            data_id="@array/common_list_data_id"
            android:tag="Welcome" >
        </org.droidtv.welcome.configsettings.ui.ListOptionsNode>

        <org.droidtv.welcome.configsettings.ui.ListOptionsNode
            android:id="@+id/date_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            data="@array/common_list_data"
            data_id="@array/common_list_data_id"
            android:tag="Date" >
        </org.droidtv.welcome.configsettings.ui.ListOptionsNode>

        <org.droidtv.welcome.configsettings.ui.ListOptionsNode
            android:id="@+id/time_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            data="@array/common_list_data"
            data_id="@array/common_list_data_id"
            android:tag="Time" >
        </org.droidtv.welcome.configsettings.ui.ListOptionsNode>

        <org.droidtv.welcome.configsettings.ui.ListOptionsNode
            android:id="@+id/weather_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            data="@array/common_list_data"
            data_id="@array/common_list_data_id"
            android:tag="Weather" >
        </org.droidtv.welcome.configsettings.ui.ListOptionsNode>

    </org.droidtv.welcome.configsettings.ui.OptionsNode>

    <org.droidtv.welcome.configsettings.ui.OptionsNode
        android:id="@+id/set_background_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="Set Background" >
        <org.droidtv.welcome.configsettings.ui.ListOptionsNode
            android:id="@+id/use_philips_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            data="@array/play_list_data"
            data_id="@array/play_list_data_id"
            android:tag="Philips default" >
        </org.droidtv.welcome.configsettings.ui.ListOptionsNode>

