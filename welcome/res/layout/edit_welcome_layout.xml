    </org.droidtv.welcome.configsettings.ui.ListOptionsNode>

    <org.droidtv.welcome.configsettings.ui.OptionsNode
        android:id="@+id/recommended_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="Recommended">

        <org.droidtv.welcome.configsettings.ui.OptionsNode
            android:id="@+id/recommended_apps"
            actionable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="Select Apps">
            
        </org.droidtv.welcome.configsettings.ui.OptionsNode>

        <org.droidtv.welcome.configsettings.ui.OptionsNode
            android:id="@+id/app_recommendations"
