    </org.droidtv.welcome.configsettings.ui.OptionsNode>

    <org.droidtv.welcome.configsettings.ui.OptionsNode
        android:id="@+id/user_interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="User Interface Setting">

        <org.droidtv.welcome.configsettings.ui.OptionsNode
            android:id="@+id/user_interface_back_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="Background Panel">

            <org.droidtv.welcome.configsettings.ui.ListOptionsNode
                android:id="@+id/user_interface_main_background_enabled_setting"
                data="@array/main_background_enabled_setting_data"
                data_id="@array/main_background_enabled_setting_data_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Enable">
            </org.droidtv.welcome.configsettings.ui.ListOptionsNode>

        </org.droidtv.welcome.configsettings.ui.OptionsNode>

        <org.droidtv.welcome.configsettings.ui.OptionsNode
            android:id="@+id/user_interface_side_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="Side Panel">

            <org.droidtv.welcome.configsettings.ui.SidePanelBackgroundColorNode
                android:id="@+id/side_panel_background_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Background Color"></org.droidtv.welcome.configsettings.ui.SidePanelBackgroundColorNode>

            <org.droidtv.welcome.configsettings.ui.SidePanelHighlightedTextColorNode
                android:id="@+id/side_panel_highlighted_text_color"
