                android:layout_height="wrap_content"
                android:tag="Highlighted Text Color"/>

            <org.droidtv.welcome.configsettings.ui.SidePanelNonHighlightedTextColorNode
                android:id="@+id/side_panel_non_highlighted_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Non Highlighted Text Color"/>

        </org.droidtv.welcome.configsettings.ui.OptionsNode>

        <org.droidtv.welcome.configsettings.ui.OptionsNode
            android:id="@+id/revert_session_changes"
            actionable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@string/edit_launcher_revert_session_changes"></org.droidtv.welcome.configsettings.ui.OptionsNode>

        <org.droidtv.welcome.configsettings.ui.OptionsNode
            android:id="@+id/reset_settings"
            actionable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
