<resources xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">  
          
    </style>
    
    <style name="WelcomeTheme" parent="@org.droidtv.ui.tvwidget2k15:style/uiComponentsTheme">
	    <item name="android:windowActionBar">false</item>
  	    <item name="android:windowFullscreen">true</item>
	    <item name="android:windowNoTitle">true</item>
	</style>

   <style name="AppTheme.Transparent.NoTitleBar" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="shadowText">
        <item name="android:background">#00000000</item>
        <item name="android:shadowColor">#BF000000</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="messageInfoText">
        <item name="android:shadowColor">#BF000000</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textSize">23.4sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="epgTransparentTheme" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

	<style name="OptionsMenuAnimation">
         <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
         <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
     </style>

    <style name="sliderMinMaxValueTextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">
            @org.droidtv.ui.tvwidget2k15:drawable/slider_value_textcolor
        </item>
        <item name="android:textSize">8sp</item>
    </style>
    
	 <style name="sliderCurrentValueTextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">
            @org.droidtv.ui.tvwidget2k15:drawable/slider_current_value_textcolor
        </item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
